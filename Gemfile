source "https://rubygems.org"

# Use the latest Jekyll instead of the pinned `github-pages` gem
gem "jekyll", "~> 4.3"

# Optional for local `jekyll serve` on Ruby 3+
group :development do
  gem "webrick", "~> 1.8"
end

# Generate sitemap.xml automatically based on site.url/baseurl
gem "jekyll-sitemap", "~> 1.4"
